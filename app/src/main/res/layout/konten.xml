<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	>
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#FFFFFF"
		android:orientation="vertical"
		>
		<LinearLayout
			android:id="@+id/actionbar"
			android:layout_width="match_parent"
			android:layout_height="60dp"
			android:paddingLeft="8dp"
			android:paddingTop="5dp"
			android:paddingRight="8dp"
			android:paddingBottom="5dp"
			android:background="#E91E63"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			>
			<ImageView
				android:id="@+id/imageview1"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:src="@drawable/coin_icon"
				android:scaleType="fitXY"
				/>
			<TextView
				android:id="@+id/poin"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="0"
				android:textSize="30sp"
				android:textStyle="bold"
				android:textColor="#FFEB3B"
				/>
			<LinearLayout
				android:id="@+id/linear5"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="horizontal"
				android:gravity="right|center_vertical"
				>
				<LinearLayout
					android:id="@+id/linear14"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:padding="8dp"
					android:orientation="vertical"
					android:layout_weight="1"
					>
					<TextView
						android:id="@+id/nope"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginRight="10dp"
						android:padding="2dp"
						android:text="0812160*****"
						android:textSize="10sp"
						android:textStyle="bold"
						android:textColor="#FFEB3B"
						/>
					<TextView
						android:id="@+id/tanggal"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="2dp"
						android:text="TextView"
						android:textSize="10sp"
						android:textColor="#B3E5FC"
						/>
				</LinearLayout>
				<ListView
					android:id="@+id/list_menu"
					android:layout_width="0dp"
					android:layout_height="0dp"
					android:padding="8dp"
					android:choiceMode="none"
					/>
				<Spinner
					android:id="@+id/spinner_menu"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:padding="8dp"
					android:background="@drawable/menu_main"
					android:spinnerMode="dropdown"
					android:layout_gravity="center_horizontal|center_vertical"
					/>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/menu_dan_baca2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			>
			<LinearLayout
				android:id="@+id/linear8"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:paddingLeft="50dp"
				android:paddingTop="30dp"
				android:paddingRight="50dp"
				android:paddingBottom="10dp"
				android:background="#EC407A"
				android:orientation="vertical"
				android:layout_weight="1"
				>
				<LinearLayout
					android:id="@+id/linear9"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="2dp"
					android:background="#FFFFFF"
					android:orientation="horizontal"
					android:gravity="center_vertical"
					>
					<ImageView
						android:id="@+id/icon_tombol_absen"
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:src="@drawable/masukimage"
						android:scaleType="fitXY"
						/>
					<TextView
						android:id="@+id/text_absenmasuk"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Absen Masuk"
						android:textSize="20sp"
						android:textColor="#000000"
						/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear10"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:padding="2dp"
					android:background="#FFFFFF"
					android:orientation="horizontal"
					android:gravity="center_vertical"
					>
					<ImageView
						android:id="@+id/icon_berbagi"
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:src="@drawable/bagikan"
						android:scaleType="fitXY"
						/>
					<TextView
						android:id="@+id/text_berbagi"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Bagikan"
						android:textSize="20sp"
						android:textColor="#000000"
						/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear11"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:padding="2dp"
					android:background="#FFFFFF"
					android:orientation="horizontal"
					android:gravity="center_vertical"
					>
					<ImageView
						android:id="@+id/icon_rating"
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:src="@drawable/rateapp"
						android:scaleType="fitXY"
						/>
					<TextView
						android:id="@+id/textkasihnilai"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Kasih Nilai"
						android:textSize="20sp"
						android:textColor="#000000"
						/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear12"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:padding="2dp"
					android:background="#FFFFFF"
					android:orientation="horizontal"
					android:gravity="center_vertical"
					>
					<ImageView
						android:id="@+id/icon_waktu_on"
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:src="@drawable/waktuituuang"
						android:scaleType="fitXY"
						/>
					<TextView
						android:id="@+id/textview6"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Kamu udah On :"
						android:textSize="20sp"
						android:textColor="#000000"
						/>
					<TextView
						android:id="@+id/timer"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="0:0:0"
						android:textSize="12sp"
						android:textColor="#4CAF50"
						/>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/halaman_claimpoin"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:orientation="vertical"
			android:layout_weight="1"
			>
			<LinearLayout
				android:id="@+id/claim_poin"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="5dp"
				android:paddingTop="3dp"
				android:paddingRight="5dp"
				android:paddingBottom="3dp"
				android:background="#F06292"
				android:orientation="vertical"
				android:gravity="center_horizontal|center_vertical"
				android:layout_weight="1"
				>
				<LinearLayout
					android:id="@+id/linear20"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="35dp"
					android:paddingTop="8dp"
					android:paddingRight="35dp"
					android:paddingBottom="8dp"
					android:background="#FCE4EC"
					android:orientation="horizontal"
					>
					<Spinner
						android:id="@+id/operator"
						android:layout_width="match_parent"
						android:layout_height="50dp"
						android:spinnerMode="dropdown"
						android:layout_gravity="center_horizontal|center_vertical"
						/>
				</LinearLayout>
				<ListView
					android:id="@+id/viewoperator"
					android:layout_width="0dp"
					android:layout_height="0dp"
					android:padding="5dp"
					android:choiceMode="none"
					/>
				<LinearLayout
					android:id="@+id/linear21"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="5dp"
					android:padding="8dp"
					android:background="#263238"
					android:orientation="horizontal"
					android:gravity="center_horizontal|center_vertical"
					>
					<Button
						android:id="@+id/sepuluhribu"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Rp 10.000"
						android:textSize="14sp"
						android:textStyle="bold"
						android:textColor="#000000"
						android:layout_weight="1"
						/>
					<Button
						android:id="@+id/limapuluhribu"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Rp 50.000"
						android:textSize="14sp"
						android:textStyle="bold"
						android:textColor="#000000"
						android:layout_weight="1"
						/>
					<Button
						android:id="@+id/seratusribu"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Rp 100.000"
						android:textSize="14sp"
						android:textStyle="bold"
						android:textColor="#000000"
						android:layout_weight="1"
						/>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear_pesan_sistem"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:background="#263238"
			android:orientation="horizontal"
			>
			<ImageView
				android:id="@+id/imagepesansistem"
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_marginRight="5dp"
				android:src="@drawable/notif"
				android:scaleType="fitXY"
				/>
			<LinearLayout
				android:id="@+id/linear4"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="#263238"
				android:orientation="horizontal"
				android:gravity="center_vertical"
				>
				<HorizontalScrollView
					android:id="@+id/hscroll1"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:padding="8dp"
					>
					<LinearLayout
						android:id="@+id/linear15"
						android:layout_width="999dp"
						android:layout_height="match_parent"
						android:orientation="horizontal"
						android:gravity="left|center_vertical"
						>
						<TextView
							android:id="@+id/isi_pesan_sistem"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="2dp"
							android:text="Tidak ada informasi untuk saat ini"
							android:textSize="12sp"
							android:textStyle="italic"
							android:textColor="#64B5F6"
							/>
					</LinearLayout>
				</HorizontalScrollView>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/footer"
			android:layout_width="match_parent"
			android:layout_height="100dp"
			android:background="#263238"
			android:orientation="horizontal"
			android:gravity="center_horizontal|center_vertical"
			>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
